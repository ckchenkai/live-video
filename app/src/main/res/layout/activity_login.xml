<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="right"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zhibo.duanshipin.activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/topview"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:background="@drawable/login_bgcolor" />

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tipphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="14dp"
                android:text="手机号注册登录有助于您跟其他网友互动交流"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edt_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:background="@null"
                android:hint="输入手机号码"
                android:inputType="phone"
                android:textColor="#000000"
                android:gravity="center"
                android:textColorHint="#cccccc"
                android:textCursorDrawable="@drawable/hint_cursor"
                android:textSize="17sp" />

            <LinearLayout
                android:id="@+id/email_ohterlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="104dp"
                    android:text="其他登录方式"
                    android:textColor="#cccccc"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/email_ohterloginsecond"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_qq_login"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/qqicon" />

                    <ImageView
                        android:id="@+id/img_wx_login"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:src="@drawable/wxicon" />

                    <ImageView
                        android:id="@+id/img_sina_login"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/sinaicon" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/email_login_comfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="104dp"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/email_login_comfirmtip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="继续表示你同意"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_useragreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《龙虎直播用户协议》"
                        android:textColor="#ef72fc"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_confrim"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="23dp"
                    android:src="@drawable/returnrightbai" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cancl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:text="取消"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>
</ScrollView>



