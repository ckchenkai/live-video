<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:elevation="2dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingTop="8dp">

    <FrameLayout
        android:id="@+id/main_panel_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_msg_1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:background="@drawable/msg_red_bg"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_bottom_1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/main_tab_1_1" />

            <TextView
                android:id="@+id/tv_bottom_1"
                style="@style/singlineText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/sceneFragment"
                android:textColor="@color/main_bottombar_inactive"
                android:textSize="11sp" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/main_panel_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_msg_2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:background="@drawable/msg_red_bg"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_bottom_2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/main_tab_2_1" />

            <TextView
                android:id="@+id/tv_bottom_2"
                style="@style/singlineText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/homefragment"
                android:textColor="@color/main_bottombar_inactive"
                android:textSize="11sp" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/main_panel_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_msg_3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:background="@drawable/msg_red_bg"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_bottom_3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/main_tab_3_1" />

            <TextView
                android:id="@+id/tv_bottom_3"
                style="@style/singlineText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/reviwefragment"
                android:textColor="@color/main_bottombar_inactive"
                android:textSize="11sp" />
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/main_panel_4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_msg_4"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:background="@drawable/msg_red_bg"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_bottom_4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/main_tab_4_1" />

            <TextView
                android:id="@+id/tv_bottom_4"
                style="@style/singlineText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/meframent"
                android:textColor="@color/main_bottombar_inactive"
                android:textSize="11sp" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>