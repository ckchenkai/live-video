<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhibo.duanshipin.widget.NoScrollViewPager
        android:id="@+id/layout_banner_viewpager"
        android:layout_width="match_parent"
        android:layout_height="190dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/layout_banner_viewpager"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="12dp"
        android:background="@color/half_balck">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专题"
            android:background="@color/white"
            android:textSize="11sp"
            android:textColor="#a30915"
            android:padding="3dp"
            android:layout_centerVertical="true"
            style="@style/singlineText"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/layout_banner_points_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我推荐、我评议身边好人"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:padding="3dp"
            android:layout_centerVertical="true"
            style="@style/singlineText"

            android:layout_toLeftOf="@id/layout_banner_points_group"/>
        </RelativeLayout>

</RelativeLayout>